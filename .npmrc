# Instala exatamente as versões do package.json
save-exact=true

# Bloqueia peer dependencies quebradas
legacy-peer-deps=false

# Garante consistência no lockfile
package-lock=true

# Registry oficial
registry=https://registry.npmjs.org/

# Evita problemas com cache offline
prefer-offline=false

# Aumenta a confiabilidade do fetch
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
